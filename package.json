{
    "name": "prettier-plugin-pretext",
    "version": "1.0.3",
    "description": "A Prettier plugin for PreTeXt XML",
    "main": "dist/plugin.js",
    "scripts": {
        "lint": "eslint --cache .",
        "build": "tsc -p tsconfig.build.json && node build.mjs",
        "print": "prettier --plugin=.",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/siefkenj/prettier-plugin-pretext.git"
    },
    "files": [
        "dist/**/*"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./*js": "./dist/*js",
        "./*": {
            "import": "./dist/*.mjs",
            "require": "./dist/*.cjs"
        }
    },
    "author": "Kevin Newton, Jason Siefken",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/siefkenj/prettier-plugin-pretext/issues"
    },
    "homepage": "https://github.com/siefkenj/prettier-plugin-pretext#readme",
    "dependencies": {
        "@xml-tools/parser": "^1.0.11",
        "prettier": ">=2.4.0"
    },
    "devDependencies": {
        "@types/jest": "^28.1.0",
        "@types/node": "^18.0.0",
        "@types/prettier": "^2.3.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "esbuild": "^0.14.48",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.0.0",
        "jest": "^28.1.0",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.2"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "env": {
            "es6": true,
            "jest": true,
            "node": true
        },
        "parser": "@typescript-eslint/parser",
        "rules": {
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/no-non-null-assertion": "off"
        }
    },
    "eslintIgnore": [
        "dist"
    ],
    "jest": {
        "preset": "ts-jest",
        "testRegex": ".test.ts$"
    },
    "prettier": {
        "plugins": [
            "."
        ],
        "tabWidth": 4
    }
}
